<% layout('layout') -%>
    <!-- Page Content -->
    <div class="container">

        <!-- Header -->
        <form>
            <div class="form-group row">
                <div class="col-8">
                    <input class="form-control" type="text" value="" id="product-input">
                </div>
                <div class="col-3">
                    <button type="button" class="btn btn-primary walmart-btn"> Find gifts </button>
                </div>
            </div>
        </form>
        <br>
        <br>
        <br>

        <!-- Search results appear here-->
        <div id="search-results" class="row text center"></div>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <img class="prod-img" src="#" width="120" height="120">
                  <h5 class="prod-name"></h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body style-3">
                    <table style="width: 80%" border="1" frame= "void" rules = "rows">
                        <thead>
                           <tr>
                                <th>Person</th>
                                <th>Add Gift</th> 
                            </tr> 
                        </thead>
                        <tbody class="people-list">
                            <!-- People append here -->
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary gift-save" data-dismiss="modal">Save changes</button>
                </div>
              </div>
            </div>
          </div>
    </div>