<% layout('layout') -%>
<div class="container">
    <div class="row">
        <div class="col-5">
            <div class="list-group" style="margin: 30px 0 0 7px; width: 100%;">
                <button type='button' class='list-group-item list-group-item-action header-btn active' disabled>Your People</button>
                <div class="my-people">
                    <!-- People append here -->
                </div>
            </div>
        </div>
        <div class="col-1">
            <a type="button" class="add-people" href="/addPerson"><i class="fa fa-plus-square" aria-hidden="true"></i></a>
        </div>

        <!-- Selected person's info displayed in card-->
        <div class="col-lg-4 col-md-5" style="margin: 30px 0 0 10px;">
                <div class="card relation-card">
                    <img class="card-img-top rounded" src="http://placehold.it/500x325" alt="" style="margin-top: 10px;">
                    <div class="card-body">
                        <h5 class="card-name"></h5>
                        <p class="card-address"></p>
                        <h6 class="card-rel"></h6>
                        <!-- Carousel: display's selected person's gifts -->
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img class="d-block item-img rounded" src="https://d30y9cdsu7xlg0.cloudfront.net/png/13360-200.png" width="180" height="180">
                              </div>
                            </div>

                            <!-- Append selected person's gifts here -->

                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-primary btn-sm">Upload</a>
                        <a href="#" class="btn btn-primary btn-sm">Share</a>
                    </div>
                </div>
            </div>
    </div>
</div>

<script src="assets/javascript/mypeople.js"></script>
